<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Improvement plan #<%= @improvement_plan.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/improvement_plans" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/improvement_plans/<%= @improvement_plan.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit improvement plan
        </a>
      </div>

      <div class="col">
        <a href="/delete_improvement_plan/<%= @improvement_plan.id %>" class="btn btn-block btn-outline-secondary">
          Delete improvement plan
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @improvement_plan.description %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @improvement_plan.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@improvement_plan.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@improvement_plan.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

