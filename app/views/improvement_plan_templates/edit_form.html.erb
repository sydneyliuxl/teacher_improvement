<h1>
  Edit improvement plan #<%= @improvement_plan.id %>
</h1>

<hr>

<form action="/update_improvement_plan/<%= @improvement_plan.id %>" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @improvement_plan.description %>">
  </div>

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control" value="<%= @improvement_plan.status %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update improvement plan
  </button>
</form>

<hr>

<a href="/improvement_plans">
  Go back
</a>
